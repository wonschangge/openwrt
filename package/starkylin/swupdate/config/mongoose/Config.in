menuconfig SWUPDATE_WEBSERVER
	bool "Web Server"
	select SWUPDATE_MONGOOSE
	help
	  Enable update from remote using a web server on the target.

if SWUPDATE_WEBSERVER
choice
	prompt "Web Server Type"
	default SWUPDATE_MONGOOSE
	help
	  Choose the web server

config SWUPDATE_MONGOOSE
	bool "mongoose"
	help
	  Mongoose embeddded web server

endchoice

config SWUPDATE_MONGOOSEIPV6
	bool "IPv6 support"
	default y
	depends on SWUPDATE_MONGOOSE
	help
	   It enables ipv6 support into mongoose

config SWUPDATE_MONGOOSESSL
	bool "SSL support"
	depends on SWUPDATE_MONGOOSE
	depends on SWUPDATE_SSL_IMPL_OPENSSL || SWUPDATE_SSL_IMPL_WOLFSSL || SWUPDATE_SSL_IMPL_MBEDTLS
	help
	   It enables SSL support into mongoose

comment "SSL support needs an SSL implementation"
	depends on !SWUPDATE_SSL_IMPL_OPENSSL && !SWUPDATE_SSL_IMPL_WOLFSSL && !SWUPDATE_SSL_IMPL_MBEDTLS

endif
